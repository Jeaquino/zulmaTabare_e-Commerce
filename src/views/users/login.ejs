
<%-include('../partials/head') %>

<body>
    <%-include('../partials/header') %>

    <main>
        <div class="products-title">
            <h1>Login</h1>
        </div>
        <div class="login-register">
            <form action="/users/login" method="POST">
                <% if (locals.errors && errors.length > 0) { %>
                    <div class="alert alert-danger">
                        <ul>
                            <% errors.forEach(error => { %>
                                <li><%= error.msg %></li>
                            <% }); %>
                        </ul>
                    </div>
                <% } %>
                <input type="text" name="usuario" placeholder="Usuario o Email" required class="input-field">
                <% if (locals.errors && errors.find(err=> err.param === 'usuario' )) {%>
                    <div class="invalid-feedback">
                        <%= errors.find(err => err.param === 'usuario').msg %>
                    </div>
                <% } %>
                <input type="password" name="contrasena" placeholder="Contraseña" required class="input-field">
                <% if (locals.errors && errors.find(err=> err.param === 'contrasena' )) {%>
                    <div class="invalid-feedback">
                        <%= errors.find(err => err.param === 'contrasena').msg %>
                    </div>
                <% } %>
                <div class="remember-me"> 
                    <input type="checkbox" id="remember" name="remember"> 
                    <label for="remember">Recuérdame</label> 
                </div>
                <button type="submit" class="send-button">Ingresar</button>
            </form>

            <% if (locals.error) { %>
                <div class="alert alert-danger" role="alert">
                    <%= error %>
                </div>
            <% } %>

            <a href="/users/forgotPassword" class="forgot-password">¿Olvidaste tu contraseña?</a>
        </div>
    </main>

    <%-include('../partials/footer') %>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
<script src="https://unpkg.com/swiper/swiper-bundle.min.js"></script>
    
</body>
</html>