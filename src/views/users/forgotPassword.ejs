
<%- include('../partials/head') %>

<body>
    <%-include('../partials/header') %>

    <main>
        <div class="products-title">
            <h1>Recuperar contraseña</h1>
        </div>
        <div class="login-register">
            <form id="forgotPasswordForm" action="/users/forgotPassword" method="POST">
                <input type="text" name="usuario" placeholder="Usuario o Email" required class="input-field">
                <div id="preguntaSeguridad" style="display: none;">
                    <label for="respuestaSeguridad"></label>
                    <input type="text" name="respuestaSeguridad" placeholder="Respuesta" required class="input-field">
                    <input type="password" name="nuevaContrasena" placeholder="Nueva contraseña" required class="input-field">
                    <button type="submit" class="send-button">Cambiar contraseña</button>
                </div>
                <button type="button" id="mostrarPregunta" class="send-button">Mostrar pregunta</button>
            </form>

            <% if (locals.error) { %>
                <div class="alert alert-danger" role="alert">
                    <%= error %>
                </div>
            <% } %>
        </div>
    </main>
        <%-include('../partials/footer') %>
        <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
<script src="https://unpkg.com/swiper/swiper-bundle.min.js"></script>
    <script src="/javascripts/forgotPassword.js"></script>
</body>